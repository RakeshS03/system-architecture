{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2019", "DOM"],   // add ES2019 for flatMap and other methods
    "types": ["node"]           // include Node.js types
  },
  "include": ["src/**/*"]
}
